def containerRepo = 'docker.io/reedswenson/ambient-weather-exporter'
def gitBranch = env.BRANCH_NAME.replaceAll('/','_')
def commitHash = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
def imgBaseDest = "${containerRepo}:${gitBranch}-${commitHash}"

pipeline {
  agent none
  stages {
    stage("Image Builds") {
      parallel {
        stage('AMD64 Build') {
          agent {
            kubernetes {
              yamlFile '.cicd/kaniko-amd64.yaml'
            }
          }
          steps {
            script {
                      IMG_DEST = "${imgBaseDest}-amd64"
                      echo "Image Destination ${IMG_DEST}"
                  }
            container('kaniko') {
              withEnv(['PATH+EXTRA=/busybox',"IMG_DEST=${IMG_DEST}", "CACHE=false"]) {
                        sh '''#!/busybox/sh
                        PATH=/usr/local/bin:/kaniko:/busybox /kaniko/executor \
                        -f `pwd`/Dockerfile \
                        -c `pwd` \
                        --snapshot-mode=redo \
                        --use-new-run  \
                        --cache=$CACHE \
                        --destination=$IMG_DEST
                        '''
                        }
            }
          }
        }
        stage('ARM64 Build') {
          agent {
            kubernetes {
              yamlFile '.cicd/kaniko-arm64.yaml'
            }
          }
          steps {
            script {
                      IMG_DEST = "${imgBaseDest}-amd64"
                      echo "Image Destination ${IMG_DEST}"
                  }
            container('kaniko') {
              withEnv(['PATH+EXTRA=/busybox',"IMG_DEST=${IMG_DEST}", "CACHE=false"]) {
                        sh '''#!/busybox/sh
                        PATH=/usr/local/bin:/kaniko:/busybox /kaniko/executor \
                        -f `pwd`/Dockerfile \
                        -c `pwd` \
                        --snapshot-mode=redo \
                        --use-new-run  \
                        --cache=$CACHE \
                        --destination=$IMG_DEST
                        '''
                        }
            }
          }
        }
      }
    }
    stage("Manifest Creation") {
      echo "Create Manifest"
    }
  }
}